<h1>Available Pets</h1>

<ul>
  <% @available_pets.each do |pet| %>
    <li>
      <h2><%= pet.name %></h2>
      <p>Breed: <%= pet.breed %></p>
      <p>Age: <%= pet.age %></p>
      <% if pet.img_url.present? %>
        <img src="<%= pet.img_url %>" alt="<%= pet.name %>" style="width: 300px; height: 300px;">
      <% end %>
    </li>
  <% end %>
</ul>
